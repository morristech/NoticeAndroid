<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <lin.jiang.notice.presentation.componet.PullToRefreshView
        android:id="@+id/_main_fragment_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/_main_fragment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_fragment_news" />
    </lin.jiang.notice.presentation.componet.PullToRefreshView>
    <include layout="@layout/layout_state"/>
</RelativeLayout>


